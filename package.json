{
  "name": "collabx",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @collabx/shared build && concurrently \"pnpm --filter @collabx/frontend dev\" \"pnpm --filter @collabx/backend start:dev\"",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "clean": "pnpm -r clean",
    "install:all": "pnpm install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "typescript": "^5.1.3",
    "prettier": "^3.2.5",
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "concurrently": "^8.2.2"
  }
}
